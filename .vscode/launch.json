{
    "version": "0.2.0",
    "configurations": [
        // Debugging with GDB:
        {
            "program": "${command:cmake.launchTargetPath}",
            "name": "Launch (gdb)",
            "request": "launch",
            "args": [
                "--version"
            ],
            "environment": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "type": "cppdbg",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        // Run without debugging:
        {
            "program": "${command:cmake.launchTargetPath}",
            "name": "Run Without Debugging",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "type": "cppdbg"
        }
    ]
}